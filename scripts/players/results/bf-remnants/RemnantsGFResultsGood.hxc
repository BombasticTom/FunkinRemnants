import funkin.graphics.FunkinSprite;
import funkin.play.PlayState;
import StringTools;

class RemnantsGFResultsGood extends FunkinSprite
{
  function new(x:Float, y:Float)
  {
    super(x, y);
    loadSparrow('resultScreen/results-bf-remnants/resultsGOOD/resultGirlfriendGOOD');

    var boyfriend = PlayState.instance?.currentStage?.getBoyfriend();
    if (StringTools.contains(boyfriend?.characterId ?? 'bf-remnants', 'pico'))
    {
      this.alpha = 0;
    }
  }
}
