import flixel.tweens.FlxEase;
import flixel.tweens.FlxTween;
import funkin.play.cutscene.dialogue.Conversation;

class SenpaiRemnantsCensoredConversation extends Conversation
{
  function new()
  {
    super('senpai-remnants-censored');
  }

  override function showCurrentSpeaker():Void
  {
    super.showCurrentSpeaker();

    // Funny moment; stop the music for dramatic effect.
    switch (currentSpeaker.id)
    {
      case 'bf-pixel-remnants-mute':
        if (this.music != null)
        {
          this.music.destroy();
          this.music = null;
        }
      case 'senpai-remnants':
        if (this.music == null)
        {
          this.setupMusic();
        }
    }
  }
}
